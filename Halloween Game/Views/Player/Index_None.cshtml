@{ ViewBag.Title = "Off-World Mining";
 ViewBag.BodyStyle = "central"; }

@section scripts {
    <script>
        $(document).ready(function () {
            $('#aboutmodal').modal();
            setInterval(GetStatus, 3000);
        });

        function GetStatus() {
            $.get("/Central/GetStatus", function (status) {
                if (status.state != "@Halloween_Game.Session.CurrentSession.State.ToString()" || status.code != "@Halloween_Game.Session.CurrentSession.Code") window.location = "/";
            });
        }
    </script>
}

<div class="text-center">
    <h1 class="font-central " style="margin-bottom: 20px;">Off-World Mining</h1>

    <h1><span class="glyphicon glyphicon-globe"></span></h1>

    <p class="lead">
        Intersted in the glamourous lifestyle that is off-world mining?
    </p>
    <p class="lead">
        Visit one of the several recruitment stations conveniently located in your local system.
    </p>

    <h4 class="font-central "><i>Your participation is mandatory!</i></h4>
</div>

<div class="row" style="margin-top: 30px;">
    @foreach (Team team in Team.GetAll()) {
        <div class="col-xs-4">

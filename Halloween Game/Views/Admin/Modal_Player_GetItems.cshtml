@model Player
@{ Layout = null; }

@foreach (PlayerItem item in Model.GetItems) {
    <div class="row">
        <div class="col-xs-10">@item.GetItem.name [@item.TransferCode] </div>
        <div class="col-xs-2"><span class="glyphicon glyphicon-remove text-danger removeItem" data-id="@item.id" style="cursor:pointer;"></span></div>
    </div>
}

@if (Model.GetItems.Count == 0) {
    <p class="text-muted">No items.</p>
}
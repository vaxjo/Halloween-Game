<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="@ViewBag.BodyStyle">

    <!-- this exists here so that it is outside of the bootstrap .container -->
    @RenderSection("topbox", required: false)

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)

    <div id="mainModal" class="modal fade" tabindex="-1" role="dialog"></div>

    <script>
        function OpenModal(url) {
            $("#mainModal").load(url, function () { $(".modal").modal("show"); });
        }
        function HideModal(url) {
            $(".modal").modal("hide");
        }
    </script>

    @StackExchange.Profiling.MiniProfiler.RenderIncludes(StackExchange.Profiling.RenderPosition.Right, false, false, null, true, true, false, false)
</body>
</html>
